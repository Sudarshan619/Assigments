@model Day12_ClinicAssignment.Models.Doctor

@{
    ViewData["Title"] = "Delete";
}

<div style="width:70%;border: 1px solid black;padding: 12px;margin:auto;box-shadow: 1px 1px 12px;border-radius: 8px;font-family:monospace;gap:8px;display:flex;flex-direction:column">
    <h1 style="text-align:center">Delete Doctor</h1>
       
        <div class="row">
         <div style="width:auto">
            <img style="width:183px;height:275px" src="/@Model.Image" />
         </div>
         <div style="width:auto">
             <p>Doctor Id:@Model.Id</p>
             <p>Doctor Name:@Model.Name</p>
             <p>Doctor Specialization:@Model.Specialization</p>
             <p>Doctor Contact:@Model.Contact</p>
             <p>Gender :@Model.Gender</p>

         </div>
    </div>
    <div style="display: flex;align-items: center;justify-content: center;">
        <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
       </form>
    </div>

</div>
