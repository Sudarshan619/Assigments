@model IEnumerable<Day12_ClinicAssignment.Models.Doctor>


	<h1 style="text-align:center">Our Specialized Doctors</h1>
<div style="display:grid;grid-template-columns:40% 40%;grid-template-rows:auto;justify-content: center;font-family:monospace">
	@{
	foreach(var doctor in Model)
	{
			<div style="display:flex;justify-content:center;align-items:center;padding:12px;border:1px solid;margin:12px;border-radius:4px;box-shadow:1px 1px 12px;background-color:aliceblue">
		<div>
		   <img src="@doctor.Image"/>
				</div>
				<div class="doctor-div">
		   <h3>@doctor.Name</h3>
		   <ul>
						<li><span style="font-weight:600">Doctor Id</span>:@doctor.Id</li>
						<li><span style="font-weight:600">Contact</span>:@doctor.Contact</li>
						<li><span style="font-weight:600">Specialization</span>:@doctor.Specialization</li>
						<li><span style ="font-weight:600">Gender</span>:@doctor.Gender</li>
		   </ul>
				</div>
		</div>
	}
	}
	</div>

